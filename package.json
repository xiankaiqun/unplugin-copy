{
  "name": "unplugin-copy",
  "type": "module",
  "version": "0.1.9",
  "description": "Copy files and folders, with glob support.",
  "license": "MIT",
  "homepage": "https://github.com/xiankq/unplugin-copy#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xiankq/unplugin-copy.git"
  },
  "bugs": {
    "url": "https://github.com/xiankq/unplugin-copy/issues"
  },
  "keywords": [
    "unplugin",
    "vite",
    "webpack",
    "rollup",
    "rolldown",
    "rspack",
    "farm",
    "transform",
    "copy",
    "moveFiles"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./astro": {
      "types": "./dist/astro.d.ts",
      "import": "./dist/astro.js",
      "require": "./dist/astro.cjs"
    },
    "./rspack": {
      "types": "./dist/rspack.d.ts",
      "import": "./dist/rspack.js",
      "require": "./dist/rspack.cjs"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "import": "./dist/vite.js",
      "require": "./dist/vite.cjs"
    },
    "./webpack": {
      "types": "./dist/webpack.d.ts",
      "import": "./dist/webpack.js",
      "require": "./dist/webpack.cjs"
    },
    "./rollup": {
      "types": "./dist/rollup.d.ts",
      "import": "./dist/rollup.js",
      "require": "./dist/rollup.cjs"
    },
    "./esbuild": {
      "types": "./dist/esbuild.d.ts",
      "import": "./dist/esbuild.js",
      "require": "./dist/esbuild.cjs"
    },
    "./nuxt": {
      "types": "./dist/nuxt.d.ts",
      "import": "./dist/nuxt.js",
      "require": "./dist/nuxt.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.cjs"
    },
    "./*": "./*"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./*"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch src",
    "build:fix": "esno scripts/postbuild.ts",
    "lint": "eslint . --fix",
    "start": "esno src/index.ts",
    "test": "vitest",
    "taze": "taze -w -r major minor patch",
    "release": "bumpp -r",
    "============[CI]==========": "",
    "prepublish": "npm run build",
    "publish:ci": "npm publish -r --no-git-checks --access public"
  },
  "peerDependencies": {
    "@nuxt/kit": "^3",
    "@nuxt/schema": "^3",
    "esbuild": "*",
    "rollup": "^3",
    "vite": ">=3",
    "webpack": "^4 || ^5"
  },
  "peerDependenciesMeta": {
    "@nuxt/kit": {
      "optional": true
    },
    "@nuxt/schema": {
      "optional": true
    },
    "esbuild": {
      "optional": true
    },
    "rollup": {
      "optional": true
    },
    "vite": {
      "optional": true
    },
    "webpack": {
      "optional": true
    }
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "serve-static": "^1.16.2",
    "unplugin": "^1.14.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.7.3",
    "@nuxt/kit": "^3.13.2",
    "@nuxt/schema": "^3.13.2",
    "@types/node": "^22.7.5",
    "@types/serve-static": "^1.15.7",
    "bumpp": "^9.6.1",
    "chalk": "^5.3.0",
    "eslint": "^9.12.0",
    "eslint-plugin-format": "^0.1.2",
    "esno": "^4.8.0",
    "fast-glob": "^3.3.2",
    "nodemon": "^3.1.7",
    "rimraf": "^6.0.1",
    "rollup": "^4.24.0",
    "taze": "^0.17.2",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vitest": "^2.1.2",
    "webpack": "^5.95.0"
  }
}
